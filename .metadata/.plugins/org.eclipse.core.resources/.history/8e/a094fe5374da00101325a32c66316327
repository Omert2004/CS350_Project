#ifndef INC_FIRMWARE_FOOTER_H_
#define INC_FIRMWARE_FOOTER_H_

#ifndef FW_FOOTER_H
#define FW_FOOTER_H

#include <stdint.h>

/* This Magic Number helps the bootloader scan backwards to find the data */
#define FOOTER_MAGIC 0x454E4421  // ASCII "END!"

// stattes
typedef enum {
    BL_OK = 0,                     // Success

    /* Slot / Input Errors */
    BL_ERR_INVALID_SLOT,
    BL_ERR_SLOT_OUT_OF_RANGE,

    /* Footer Errors */
    BL_ERR_FOOTER_NOT_FOUND,
    BL_ERR_FOOTER_MAGIC_MISMATCH,
    BL_ERR_FOOTER_VERSION_UNSUPPORTED,
    BL_ERR_FOOTER_SIZE_INVALID,
    BL_ERR_FOOTER_STREAM_SIZE_INVALID,

    /* Signature / Crypto Errors */
    BL_ERR_SIGNATURE_INVALID,
    BL_ERR_HASH_MISMATCH,
    BL_ERR_PUBLIC_KEY_INVALID,

    /* AES / Decryption Errors */
    BL_ERR_AES_DECRYPT_FAIL,
    BL_ERR_AES_INVALID_CHUNK_SIZE,
    BL_ERR_AES_IV_INVALID,

    /* LZ4 Decompression Errors */
    BL_ERR_LZ4_FAIL,
    BL_ERR_LZ4_OUTPUT_OVERFLOW,

    /* Flash Write / Erase Errors */
    BL_ERR_FLASH_UNLOCK_FAIL,
    BL_ERR_FLASH_ERASE_FAIL,
    BL_ERR_FLASH_PROGRAM_FAIL,
    BL_ERR_FLASH_ALIGN_ERROR,

    /* Generic Error */
    BL_ERR_UNKNOWN
} BL_Status_t;



typedef struct __attribute__((packed)) {  //attr packed -> don t align the size if not meet
	uint8_t  signature[64];
	uint32_t version;
	uint32_t image_size;
	uint32_t magic;
} fw_footer_t;  // 1 x 64 + 4 + 4 + 4  => 76 byte

#endif

#endif /* INC_FIRMWARE_FOOTER_H_ */
